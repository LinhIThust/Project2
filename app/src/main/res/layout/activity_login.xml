<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#E4626DAC"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:adjustViewBounds="false"
        android:src="@mipmap/ic_water_filter" />

    <LinearLayout
        android:weightSum="10"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
            android:id="@+id/ed_re_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:hint="Nhập số điện thoại"
            android:inputType="phone" />

        <EditText
            android:id="@+id/ed_pass_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_verified_user_black_24dp"
            android:hint="Nhập mật khẩu!"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:text="Đăng Nhập"
                android:textColor="#EAF0F0" />

            <Button
                android:id="@+id/bt_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:text="TẠO TÀI KHOẢN"
                android:textColor="#EAF0F0" />

            <TextView
                android:id="@+id/tv_quen_mk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Quên mật khẩu?"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_support"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hỗ trợ" />
    </RelativeLayout>

</LinearLayout>